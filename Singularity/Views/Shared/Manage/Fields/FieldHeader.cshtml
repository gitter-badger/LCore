@* Generator: MvcView *@
@using Singularity.Extensions;

@model IViewField

@{
    var Attr = Model.Meta.GetAttribute<FieldHeaderAttribute>();
}

@if (Attr != null)
    {
    @Html.Raw($"<h{Attr.HeaderType}>")
    @Html.TextContent($"Manage_{(ViewBag.Create == true ? "Create" : "Edit")}_Field_Header_{Model.ModelData.GetFriendlyTypeName()}_{Attr.HeaderTitle}", Attr.HeaderTitle)
    @Html.Raw($"</h{Attr.HeaderType}>")

    if (Attr.HorizontalRule)
        {
        <hr />
        }
    }
