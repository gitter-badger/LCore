@* Generator: MvcView *@

@{
    var TableData = (string[][])Model.PropertyData;
}

@model IViewField


<table class="string-multiarray">
    @for (int i = 0; i < TableData.Length; i++)
        {
        if (i == 0)
            {
            @Html.Raw("<thead>")
            }

            <tr>
                @for (int j = 0; j < TableData[i].Length; j++)
                    {
                    <td>
                        @if (TableData[i][j].Length > ControllerHelper.DefaultTableTextLength)
                            {
                            <span class="abbreviated" title="@Model.PropertyData">
                                @TableData[i][j].Substring(0, ControllerHelper.DefaultTableTextLength) ...
                            </span>
                            }
                        else
                            {
                            <span>
                                @TableData[i][j]
                            </span>
                            }
                    </td>
                    }

            </tr>

        if (i == 0)
            {
            @Html.Raw("</thead>")
            }

        if (TableData.Length == 1)
            {
            <tr>
                <td colspan="@TableData[i].Length">
                    &nbsp;
                </td>
            </tr>
            }

        }
</table>