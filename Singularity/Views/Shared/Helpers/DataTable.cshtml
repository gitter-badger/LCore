@* Generator: MvcView *@

@using System.Data;

@model DataTable

@{

}

<table>
    <thead>
        <tr>
            <td>
                Row Index
            </td>
            @for (int i = 0; i < Model.Columns.Count; i++)
                {
                DataColumn Col = Model.Columns[i];
                <td>
                    @Col.ColumnName
                </td>
                }

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
            {
            <tr>
                <td>
                    @(i + 1)
                </td>
                @for (int j = 0; j < Model.Columns.Count; j++)
                    {
                    object FieldData = Model.Rows[i][j];
                    <td>
                        @FieldData
                    </td>
                    }
            </tr>
            }
    </tbody>
</table>