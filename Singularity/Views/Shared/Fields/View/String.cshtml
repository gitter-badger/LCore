@* Generator: MvcView *@
@using LCore.Extensions;

@{
}

@model IViewField

@if (Model.ViewTypes.Has(ControllerHelper.ViewType.TableCell) &&
    Model.PropertyData.ToString().Length > ControllerHelper.DefaultTableTextLength)
    {
    <span class="abbreviated" title="@Model.PropertyData">
        @Model.PropertyData.ToString().Substring(0, ControllerHelper.DefaultTableTextLength) ...
    </span>
    }
else
    {
    <span>
        @Model.PropertyData
    </span>
    }