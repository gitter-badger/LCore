@*ReSharper disable once RedundantUsingDirective*@
@using Singularity.Routes;

@model ForceResetPasswordViewModel

@{
    ViewBag.Title = "Reset password";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm(nameof(AccountController.ForceResetPassword), typeof(AccountController).CName(),
                            FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    @Html.AntiForgeryToken()
    <h4>Reset your password.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.HiddenFor(ViewModel => ViewModel.Username)
    <!--
    <div class="form-group">
        @Html.LabelFor(ViewModel => ViewModel.Username, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(ViewModel => ViewModel.Username, new { @class = "form-control" })
        </div>
    </div>
    -->
    <div class="form-group">
        @Html.LabelFor(ViewModel => ViewModel.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(ViewModel => ViewModel.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(ViewModel => ViewModel.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(ViewModel => ViewModel.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Reset" />
        </div>
    </div>
    }

@Html.Partial(PartialViews.PasswordRequirements)

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
