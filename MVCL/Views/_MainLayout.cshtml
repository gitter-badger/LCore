@* Generator: MvcView *@

@using LCore;
@using MVCL;
@using MVCL.Models;
@using MVCL.Controllers;
@using MVCL.Context;
@using MVCL.Routes;
@using System.Linq;
@using System.Linq.Expressions;
@using System.Collections;
@using System.Collections.Generic;
@using System.ComponentModel;
@using System.ComponentModel.DataAnnotations;
@using System.ComponentModel.Design;
@using System.Web;
@using System.Web.Optimization;
@using System.Web.Mvc;

@{
    ViewBag.Title = ViewBag.Title ?? "";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Singularity</title>
    <meta name="description" content="" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render(ControllerHelper.Style_Singularity)

    @Styles.Render(BundleConfig.Style_Bootstrap)
    @Styles.Render(BundleConfig.Style_jQueryUI)

    @Styles.Render(ControllerHelper.Style_MVCL)

    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css">
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    
    <!--
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css" />
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script>
    -->

    @Scripts.Render(BundleConfig.Script_jQueryUI)
    @Scripts.Render(BundleConfig.Script_jQueryVal)
    @Scripts.Render(BundleConfig.Script_Bootstrap)
    @Scripts.Render(BundleConfig.Script_Modernizr)


    @Scripts.Render(ControllerHelper.Script_Singularity)

    @Scripts.Render(ControllerHelper.Script_MVCL)
    @Scripts.Render(ControllerHelper.Script_MVCL_Chance)
    @Scripts.Render(ControllerHelper.Script_MVCL_jQueryCookie)
    @Scripts.Render(ControllerHelper.Script_MVCL_jQueryMousewheel)
    @Scripts.Render(ControllerHelper.Script_MVCL_jQueryTimepicker)
    @Scripts.Render(ControllerHelper.Script_MVCL_qTip)

</head>
<body singularity class="@(ViewBag.ContextProvider != null ? StringExt.ToUrlSlug(ViewBag.ContextProvider.GetContext(Session).ContextName) : "")">

    <script type="text/javascript">

        $(document).ready(function () {

        })
    </script>
    <header>
        @*Html.Partial("_Menu") *@

        @if (TempData.Peek(ControllerHelper.StatusMessage) != null)
        {
            String Message = (String)TempData[ControllerHelper.StatusMessage];
            String Icon = (String)(TempData[ControllerHelper.StatusMessageIcon] ?? "");

            <div class="status-message close-dialog">
                @if (!String.IsNullOrEmpty(Icon))
                {
                    <glyph>@Icon</glyph>
                }
                @Message
            </div>
        }

        <div class="key-bind-tip" style="display:none">
            <div class="border-bottom">
                <glyph>&#xe047;</glyph>
                Key Shortcuts
            </div>
            <span id="key-bind-page-tip">
            </span>
        </div>
    </header>
    <div id="body" data-role="page">

        @RenderSection("featured", required: false)

        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year</p>
            </div>
        </div>
    </footer>

    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>